# App
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
# Gerar com: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
AUTH_SECRET=gere-e-cole-aqui

# Database (usar nomes dos serviços do Docker Compose em produção)
POSTGRES_USER=pnab
POSTGRES_PASSWORD=pnab_secret
POSTGRES_DB=pnab_irece
DATABASE_URL=postgresql://pnab:pnab_secret@postgres:5432/pnab_irece
# Para dev local sem Docker: DATABASE_URL=postgresql://pnab:pnab_secret@localhost:5432/pnab_irece

# Redis (usar nome do serviço do Docker Compose em produção)
REDIS_URL=redis://redis:6379
# Para dev local sem Docker: REDIS_URL=redis://localhost:6379

# Supabase Storage
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua-anon-key
SUPABASE_SERVICE_ROLE_KEY=sua-service-role-key

# SMTP (e-mail transacional)
SMTP_HOST=smtp.exemplo.com.br
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@exemplo.com.br
SMTP_PASS=sua-senha-smtp
SMTP_FROM="Portal PNAB Irecê <noreply@exemplo.com.br>"
